{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Next.js固有の設定
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "jsx": "preserve",

    // フロントエンド固有のパス設定
    "paths": {
      "@/*": ["./src/*"]
    },

    // Next.js用プラグイン
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
