{
  "compilerOptions": {
    "target": "ES2021",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "exclude": ["node_modules"]
}

